<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:weightSum="4" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/tab_coindata_coin_list_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <ListView
            android:id="@+id/tab_coindata_coin_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_weight="3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fitsSystemWindows="true"
            android:orientation="horizontal" >

            <include
                android:id="@+id/tab_coindata_datiGenerali"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/dati_generali_layout" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <include
                    android:id="@+id/tab_coindata_datiFisici"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    layout="@layout/dati_fisici_layout" />

                <include
                    android:id="@+id/tab_coindata_datiAcquisto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    layout="@layout/dati_acquisto_layout" />
            </LinearLayout>

            <include
                android:id="@+id/tab_coindata_datiExtra"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/dati_extra_layout" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:fitsSystemWindows="true"
            android:orientation="horizontal" >

            <include
                android:id="@+id/tab_coindata_datiArtisticiDritto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                layout="@layout/dati_artistici_layout" />

            <include
                android:id="@+id/tab_coindata_datiArtisticiRovescio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                layout="@layout/dati_artistici_layout" />

            <include
                android:id="@+id/tab_coindata_datiArtisticiTaglio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".33"
                layout="@layout/dati_artistici_layout" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>