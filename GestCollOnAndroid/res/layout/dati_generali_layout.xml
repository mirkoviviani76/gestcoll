<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_a"
    android:padding="10dp"
     >

    <TableRow
        android:id="@+id/tableRowID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView1"
            android:text="@string/Id" />

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowPosizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView13"
            android:text="@string/Posizione" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|top" >

            <TextView
                android:id="@+id/contenitore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="" />

            <TextView
                android:id="@+id/vassoio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="" />

            <TextView
                android:id="@+id/riga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="" />

            <TextView
                android:id="@+id/colonna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRowStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView16"
            android:text="@string/Status" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowAmbiti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView15"
            android:text="@string/Ambiti" />

        <ListView
            android:id="@+id/ambiti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/ambiti_list_view" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRowPaese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView3"
            android:text="@string/Paese" />

        <TextView
            android:id="@+id/paese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowAnno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView5"
            android:text="@string/Anno" />

        <TextView
            android:id="@+id/anno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowNominale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView6"
            android:text="@string/Nominale" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left|top" >

            <TextView
                android:id="@+id/valore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="" />

            <TextView
                android:id="@+id/valuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRowAutorita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView2"
            android:text="@string/Autorita" />

        <ListView
            android:id="@+id/autorita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/autorita_list_view" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRowZecca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView7"
            android:text="@string/Zecca" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nomeZecca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="" />

            <TextView
                android:id="@+id/segnoZecca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRowZecchieri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/DataLabel"
            android:id="@+id/textView14"
            android:text="@string/Zecchieri" />

        <ListView
            android:id="@+id/zecchieri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/zecchieri_list_view" />

    </TableRow>

</TableLayout>