<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tab_welcome_layout_titolo"
        style="@style/TabWelcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collezione"
        android:textIsSelectable="false" >
    </TextView>

    <TextView
        android:id="@+id/tab_welcome_layout_proprietario"
        style="@style/TabWelcomeOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textIsSelectable="false" >
    </TextView>

    <TableLayout
        android:layout_gravity="center_horizontal|center_vertical|center"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/DataLabel"
                android:text="@string/StatCoins" />

            <TextView
                android:id="@+id/tab_welcome_layout_statcoins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/DataLabel"
                android:text="@string/StatLib" />

            <TextView
                android:id="@+id/tab_welcome_layout_statlib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>
        </TableLayout>

</LinearLayout>